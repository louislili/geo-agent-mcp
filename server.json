{
    "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
    "name": "io.github.louislili/geo-agent-mcp",
    "description": "GEO Agent Server. Injects product knowledge and SEO landing pages into geo.yigather.com.",
    "repository": {
        "url": "https://github.com/louislili/geo-agent-mcp",
        "source": "github"
    },
    "version": "1.1.0",
    "remotes": [
        {
            "type": "sse",
            "url": "https://geo.yigather.com/api/v1/mcp",
            "environmentVariables": [
                {
                    "description": "GEO Agent API Key formatted as 'Bearer geo_sk_xxxxx...' (Get this from your Skills dashboard)",
                    "isRequired": true,
                    "format": "string",
                    "isSecret": true,
                    "name": "Authorization"
                },
                {
                    "name": "MCP_PROTOCOL_VERSION",
                    "description": "MCP Protocol Version",
                    "isRequired": true,
                    "format": "string",
                    "defaultValue": "2025-11-25"
                },
                {
                    "name": "VALIDATION_STRICT",
                    "description": "Enable strict validation",
                    "isRequired": true,
                    "format": "string",
                    "defaultValue": "true"
                },
                {
                    "name": "SANITIZE_OUTPUT",
                    "description": "Enable output sanitization",
                    "isRequired": true,
                    "format": "string",
                    "defaultValue": "true"
                }
            ]
        }
    ]
}